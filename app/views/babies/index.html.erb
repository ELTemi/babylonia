<% if flash[:notice] %>
    <div class="message"><%= flash[:notice] %></div>
  <% end %>

<h1>All Babies</h1>


<% @babies.each do |baby| %>
  <%= link_to baby.name, baby_path(baby) %>
  <ul>
    <li>Mom: <%= link_to baby.mom.name, mom_path(baby.mom)%> <br><br></li>
    <li>Caregiver: <%= link_to baby.caregiver.name, caregiver_path(baby.caregiver)%></li>
    <li> <%= link_to "Create a new log", new_baby_dailylog_path(baby) %></li>
    <li> <%= link_to "All Logs", baby_dailylogs_path(baby) %></li>
  </ul>
<% end %>
