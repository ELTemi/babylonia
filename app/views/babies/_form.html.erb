<div class="center">
  <div class="form-group">
    <%= form_for @baby, html: {multipart: true} do |f| %>
      Name <br>
      <%= f.text_field :name %><br>

      <% if params[:mom_id] %>
        <%= f.hidden_field :mom_id, :value => params[:mom_id] %><br>
      <% end %>

      Upload your picture<br>
      <%= f.file_field :avatar%><br>

      Emergency Contact number<br>
      <%= f.text_field :emergency_contact%><br>

      date of Birth<br>
      <%= f.date_field :dob %><br>

      Sex<br>
      <%= f.text_field :sex %><br>

      Allergies<br>
      <%= f.text_field :allergies %><br>

      Select a Caregiver
      <%= f.collection_select :caregiver_id, Caregiver.all, :id, :name %><br>


      <%= f.submit %>
    <% end %>
  </div>
</div>


<% if @baby.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@baby.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @baby.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
