<div class="center">
  <div class="form-group">
    <%= form_for @baby, html: {multipart: true, class: "form-group"} do |f| %>
      Name <br>
      <%= f.text_field :name, class: "form-group" %><br>

      <% if params[:mom_id] %>
        <%= f.hidden_field :mom_id, :value => params[:mom_id], class: "form-group" %><br>
      <% end %>

      Upload your picture<br>
      <%= f.file_field :avatar, class: "form-group"%><br>

      Emergency Contact number<br>
      <%= f.text_field :emergency_contact, class: "form-group"%><br>

      date of Birth<br>
      <%= f.date_field :dob, class: "form-group" %><br>

      Sex<br>
      <%= f.text_field :sex, class: "form-group" %><br>

      Allergies<br>
      <%= f.text_field :allergies, class: "form-group" %><br>

      Select a Caregiver
      <%= f.collection_select :caregiver_id, Caregiver.all, :id, :name, class: "form-group" %><br>


      <%= f.submit class: "create-button" %>
    <% end %>
  </div>
</div>


<% if @baby.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@baby.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @baby.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
