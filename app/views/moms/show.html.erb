<%= render partial: "mom", locals: { mom: @mom } %>

<h3>Babies on profile</h3>
<ul>
  <% @mom.babies.each do |baby| %>

    <%= link_to "#{baby.name}", mom_baby_path(baby) %>
    <h5><%= link_to "Edit baby", edit_mom_baby_path(baby) %></h5>
    <h5><%= link_to "Delete baby", baby_path(baby), :data => { :method => "delete" } %></h5>
    <%= render partial: "/babies/baby", locals: { baby: baby } %>

    <h3>Caregiver</h3>
    Caregiver's name: <%= baby.caregiver.name %><br>
    <%= render partial: "caregivers/caregiver", locals: { caregiver: baby.caregiver } %>

  <% end %>
</ul>

<h5><%= link_to "Add a Baby", new_mom_baby_path(@mom, @baby) %></h5>





