
<h1>Welcome <%= @mom.name %><br></h1>

<%= render partial: "mom", locals: { mom: @mom } %>

<h3>Babies on profile</h3>

<% @mom.babies.each do |baby| %>
  <p id="babies" data-id="<%= baby.id %>"><%= link_to baby.name, baby_path(baby) %> - <%= link_to "See all Logs for #{baby.name} ", baby_dailylogs_path(baby) %><br></p>
<% end %>
<p id="babyName"></p>  <p><a id="babyLogs"></a></p>



<p><strong>Add a Baby</p></strong>

<%= form_for @mom.babies.build do |f| %> <br>
  <%= f.hidden_field :mom_id, :value => @mom.id %><br>
  Name <br>
  <%= f.text_field :name %><br>
  Upload your picture<br>
  <%= f.file_field :avatar%><br>
  Emergency Contact number<br>
  <%= f.text_field :emergency_contact%><br>
  Date of Birth<br>
  <%= f.date_field :dob %><br>
  Sex<br>
  <%= f.text_field :sex %><br>
  Allergies<br>
  <%= f.text_field :allergies %><br>
  Select a Caregiver
  <%= f.collection_select :caregiver_id, Caregiver.all, :id, :name %><br>
  <%= f.submit %>
  <input type="button" id="reset-form" value="Reset" />
<% end %>








